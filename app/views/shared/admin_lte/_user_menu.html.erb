<!-- User Account Menu -->
<li class="dropdown user user-menu">
  <!-- Menu Toggle Button -->
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <!-- The user image in the navbar-->
    <%= image_tag('user_jenny', class: 'user-image') %>
    <!-- hidden-xs hides the username on small devices so only the image appears. -->
    <span class="hidden-xs"><%= render_user_name %></span>
  </a>
  <ul class="dropdown-menu">
    <!-- The user image in the menu -->
    <li class="user-header">
      <%= image_tag('user_jenny', class: 'img-circle') %>

      <p>
        <%= render_user_name %>
        <small>Member since Nov. 2012</small>
      </p>
    </li>
    <!-- Menu Body -->
    <li class="user-body">
      <div class="row">
        <div class="col-xs-4 text-center">
          <a href="#">Followers</a>
        </div>
        <div class="col-xs-4 text-center">
          <a href="#">Sales</a>
        </div>
        <div class="col-xs-4 text-center">
          <a href="#">Friends</a>
        </div>
      </div>
      <!-- /.row -->
    </li>
    <!-- Menu Footer-->
    <li class="user-footer">
      <div class="pull-left">
        <%= link_to '个人资料', profile_path, class: 'btn btn-default btn-flat' %>
      </div>
      <div class="pull-right">
        <%= render_user_sign_out %>
      </div>
    </li>
  </ul>
</li>
